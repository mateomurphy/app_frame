.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", collection_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_resource_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", resource_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.post.title", :default => t("activerecord.labels.title", :default => "Title"))
          \:
        = @post.title
      %p
        %b
          = t("activerecord.attributes.post.body", :default => t("activerecord.labels.body", :default => "Body"))
          \:
        = @post.body
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_resource_path(@post), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), resource_path(@post), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => '/web_app_theme/actions/sidebar')
