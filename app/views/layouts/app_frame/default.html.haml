- sidebar = render 'sidebar'
!!! 5
%html
  %head
    = render 'head'
  %body
    .navbar.navbar-inverse.navbar-fixed-top{:'data-dropdown'=>"dropdown"}
      .navbar-inner
        .container-fluid
          %a{:class=>"btn btn-navbar", :data => { :toggle => "collapse", :target => ".nav-collapse"}}
            %span.icon-bar
            %span.icon-bar        
            %span.icon-bar
          = render 'brand'
          .nav-collapse.collapse
            %ul.nav
              = render 'top_menu'
            %ul.nav.pull-right
              = render 'secondary_menu'
    
    #main.container-fluid
      - if sidebar.present?
        .content
          .page-header
            = render 'page_header'
          = render 'sub_menu'
          = render 'flashes'
          = yield
        .sidebar
          = sidebar
      - else
        .page-header
          = render 'page_header'      
        = render 'sub_menu'      
        = render 'flashes'
        = yield
        